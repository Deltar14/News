<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/red_salmon">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/titleToolbarView"
		style="@style/TextAppearance.AppCompat.Title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/space_normal"
		android:layout_marginVertical="@dimen/space_x_small"
		android:gravity="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="NEWS" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageButtonBackToolbarView"
		android:layout_width="16dp"
		android:layout_height="24dp"
		android:layout_marginStart="@dimen/space_normal"
		android:background="@drawable/chevron_left_solid"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
